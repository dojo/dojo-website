<!DOCTYPE html>
<html>
<head>
	<%- include('../_partials/meta', {'deps':['dtk/filter']}) %>
	<title>Dojo Tutorials - Dojo Toolkit</title>
</head>
<body class="tutorials">
	<%- include('../_partials/header') %>
	<main class="nonav">
		<div class="row">
			<h1 class="pageTitle">Dojo Documentation</h1>
			<div class="row full section docs nopad">
				<%- include('../_partials/ui/docsLeadin', url) %>
			</div>
		</div>

		<section class="status alt" id="tutorials">
			<div class="tutorialMenuContainer">
				<div class="row">
					<div class="medium-12 columns small-centered">
						<%- include('../_partials/ui/tutorialMenu', {root: ''}) %>
					</div>
				</div>
			</div>
			<h1 class="pageTitle">Tutorials</h1>
			<div class="cardGrid medium-10 columns small-centered">
				<% categoryOrder.forEach(function(cat, idx, arr) { %>
					<%- include('../_partials/ui/tutorialSection', {tutorials: tutorials[cat]}) %>
				<% }); %>
			</div>
		</section>
		<%- include('../_partials/footer') %>
	</main>
</body>
</html>